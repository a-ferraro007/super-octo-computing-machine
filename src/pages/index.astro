---
import NameSign from '../Components/NameSign/index.astro'
import Platform from '../Components/Platform/index.astro'
---

<style>
  .outer-border {
    border: 8px solid black;
    border-radius: 10px;
  }

  .inner-border {
    border: 6px solid #282626;
    border-radius: 1px;
  }
</style>

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700;800;900&display=swap"
  rel="stylesheet"
/>
<title>Anthony Ferraro</title>

<body class="bg-wall">
  <div
    class="flex mx-32 w-full xl:max-w-[1200px] h-abovePlatform items-center justify-around"
  >
    <div class="max-h-[60%] flex flex-col h-full">
      <NameSign />
    </div>
    <div class="h-[60%] outer-border w-[325px]">
      <div class="h-full inner-border w-full bg-[#F1F1F1]"></div>
    </div>
  </div>
  <Platform />
</body>
